<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".checkup.activity.RCJCActivity">

    <com.smartbus.heze.http.views.Header
        android:id="@+id/header"
        style="@style/Header"
        app:header_title="@string/first_richang">
    </com.smartbus.heze.http.views.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="车牌号:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <LinearLayout
                        style="@style/oaEditText"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCarNo"
                            style="@style/oaEditText"
                            android:layout_marginRight="10dp"
                            android:hint="选择车牌号" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/shouye" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="部门:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <LinearLayout
                        style="@style/oaEditText"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etDepartment"
                            style="@style/oaEditText"
                            android:layout_marginRight="10dp"
                            android:hint="" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/shouye" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="驾驶员:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <LinearLayout
                        style="@style/oaEditText"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDrive"
                            style="@style/oaEditText"
                            android:layout_marginRight="10dp"
                            android:hint="选择驾驶员" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/shouye" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="线路:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <LinearLayout
                        style="@style/oaEditText"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etLine"
                            style="@style/oaEditText"
                            android:layout_marginRight="10dp"
                            android:hint="" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/shouye" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="检查时间: *" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/oaEditText" />
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="检查内容:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <Spinner
                        android:id="@+id/spContent"
                        style="@style/oaEditText"/>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="检查方式:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <Spinner
                        android:id="@+id/spFound"
                        style="@style/oaEditText"/>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="是否复合:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <Spinner
                        android:id="@+id/spFH"
                        style="@style/oaEditText"/>
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="现场整改:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <Spinner
                        android:id="@+id/spZG"
                        style="@style/oaEditText"/>
                </LinearLayout>
                <View style="@style/HourLine"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="检查人:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <TextView
                        android:id="@+id/tvCheckPerson"
                        style="@style/oaEditText"
                        android:layout_marginRight="10dp"
                        android:maxLength="50"/>

                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="存在问题:*" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />
                    <EditText
                        android:id="@+id/etQuestion"
                        style="@style/oaEditText"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_marginRight="10dp"
                        android:hint="请输入存在问题" />
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="处理结果"
                        android:layout_height="50dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <EditText
                        android:id="@+id/etResult"
                        style="@style/oaEditText"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:layout_marginRight="10dp"
                        android:hint="请输入处理结果" />
                </LinearLayout>
                <View style="@style/HourLine"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/oaTextView"
                        android:text="备注" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye" />

                    <EditText
                        android:id="@+id/etRemarks"
                        style="@style/oaEditText"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp"
                        android:hint="请输入备注"
                        android:maxLength="50"/>
                </LinearLayout>
                <View style="@style/HourLine"></View>
            </LinearLayout>

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imAdd01"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_myphoto"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/imAdd02"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/imAdd03"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
            <Button
                android:id="@+id/btnUp"
                style="@style/Button"
                android:text="提交"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
